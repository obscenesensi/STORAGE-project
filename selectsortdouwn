#include <stdio.h>
#define N 10
 
int main()
{
    int arr[]={3, 1, 5, 4, 2, 6, 7, 9, 8, 0};
    int i, j, index, temp;
      
for (i = 0; i < N - 1; i++)
{
index = i;
for (j = i + 1; j < N; j++)
{
if (arr[index] < arr[j])
{
index = j;
}
}
temp = arr[index];
arr[index] = arr[i];
arr[i] = temp;
}
    
    for(i=0;i<10;i++)
        printf("%d ",arr[i]);
    
    return 0;
}
