#include <stdio.h>

int main(void)
{
    int num;

    printf("자연수를 입력하세요: ");
    scanf("%d", &num);

    if (num < 10)
    {
        printf("%d는 1자리 자연수입니다.\n", num);
    }
    else if (income < 100)
    {
        printf("%d는 2자리 자연수입니다.\n", num);
    }
    else if (income < 1000)
    {
        printf("%d는 3자리 자연수입니다.\n", num);
    }
    else if (income < 10000)
    {
        printf("%d는 4자리 자연수입니다.\n", num);
    }
    else
    {
        printf("1에서 9999사이의 값만을 입력하세요!\n", num);
    }

    return 0;
}
