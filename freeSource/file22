#include <stdio.h>
#include <direct.h>       //mkdir
#include <errno.h>        //errno
 
int main( )
{
    char strFolderPath[] = { "D:\\CreateFolder" };
     
    int nResult = mkdir( strFolderPath );
 
    if( nResult == 0 )
    {
        printf( "폴더 생성 성공" );
    }
    else if( nResult == -1 )
    {
        perror( "폴더 생성 실패 - 폴더가 이미 있거나 부정확함\n" );
        printf( "errorno : %d", errno );
    }
 
    return 0;
}
